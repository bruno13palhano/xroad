<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="uiEvents"
            type="com.example.xroad.ui.analytics.AnalyticsFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.analytics.AnalyticsFragment">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp">

            <TextView
                android:id="@+id/analytics_month_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:text="@string/month_chart_label"
                android:onClick="@{v -> uiEvents.navigateToMonth()}"
                app:drawableStartCompat="@drawable/baseline_calendar_month_24"
                android:drawablePadding="8dp" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/analytics_week_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:text="@string/week_chart_label"
            android:onClick="@{v -> uiEvents.navigateToWeek()}"
            app:drawableStartCompat="@drawable/baseline_calendar_view_week_24"
            android:drawablePadding="8dp" />

        <TextView
            android:id="@+id/analytics_difficult_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:text="@string/difficulty_chart_label"
            android:onClick="@{v -> uiEvents.navigateToDifficulty()}"
            app:drawableStartCompat="@drawable/baseline_scale_24"
            android:drawablePadding="8dp"/>
    </LinearLayout>
</layout>