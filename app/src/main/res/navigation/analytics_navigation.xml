<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/analytics_navigation"
    app:startDestination="@id/analyticsFragment">

    <fragment
        android:id="@+id/analyticsFragment"
        android:name="com.example.xroad.ui.analytics.AnalyticsFragment"
        android:label="@string/analytics_label"
        tools:layout="@layout/fragment_analytics">

        <action
            android:id="@+id/action_analytics_to_chart"
            app:destination="@id/analyticsChartFragment" />
    </fragment>

    <fragment
        android:id="@+id/analyticsChartFragment"
        android:name="com.example.xroad.ui.analytics.AnalyticsChartFragment"
        android:label="@string/analytics_chart_label"
        tools:layout="@layout/fragment_analytics_chart" />
</navigation>