<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/roads_navigation"
    app:startDestination="@id/roadsFragment">

    <fragment
        android:id="@+id/roadsFragment"
        android:name="com.example.xroad.ui.roads.PathsFragment"
        android:label="RoadsFragment"
        tools:layout="@layout/fragment_paths">

        <action
            android:id="@+id/action_paths_to_path"
            app:destination="@id/roadFragment" />
    </fragment>

    <fragment
        android:id="@+id/roadFragment"
        android:name="com.example.xroad.ui.path.PathFragment"
        android:label="RoadFragment"
        tools:layout="@layout/fragment_path">

        <argument
            android:name="roadId"
            app:argType="long" />
    </fragment>
</navigation>